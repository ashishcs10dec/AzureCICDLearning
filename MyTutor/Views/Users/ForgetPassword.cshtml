@model MyTutor.Models.ForgetPassword
@{
    ViewData["Title"] = "Forget Password";
}
<article class="card-body mx-auto">
    <h4 class="card-title mt-3 text-center">Forget Password</h4>
    <p class="text-center"></p>
    <p class="text-center" style="color:red;">@ViewBag.ErrorMsg</p>
    @using (Html.BeginForm("ForgetPassword", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group input-group">
            @Html.TextBoxFor(x => x.Email, null, new { @placeholder = "Email", @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Email, null, new { @Style = "color:red;" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Reset</button>
        </div>
        <div class="form-group input-group">
            <p><a href="@Url.Action("Signin", "Users")" class="btn btn-outline-primary">Signin</a></p>
        </div>
    }
</article>