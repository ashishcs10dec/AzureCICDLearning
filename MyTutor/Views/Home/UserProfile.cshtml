@model Tuple<MyTutor.Models.MyProfileModel, MyTutor.Models.GetContactDetails>
@{
    ViewData["Title"] = "User Profile";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="..\Images\@Model.Item1.ProfilePicPath" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>@Model.Item1.FullName</h4>
                                <p class="text-secondary mb-1">Profession Tutor</p>
                                <p class="text-muted font-size-sm">@Model.Item1.Area, @Model.Item1.City, @Model.Item1.State</p>
                                <hr>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <p class="text-muted font-size-sm" style="color:#f00">**Please fill the below details to get the Contact Number.</p>
                                    <p>@ViewBag.Msg</p>
                                    <div class="form-group input-group" style="margin-left:20%">
                                        @Html.TextBoxFor(x => x.Item2.Name, null, new { @placeholder = "Name", @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Item2.Name, null, new { @Style = "color:red;" })
                                    </div>
                                    <div class="form-group input-group" style="margin-left:20%">
                                        @Html.TextBoxFor(x => x.Item2.MobileNumber, null, new { @placeholder = "Mobile No", @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.Item2.MobileNumber, null, new { @Style = "color:red;" })
                                    </div>
                                    <div class="form-group input-group" style="margin-left:20%">
                                        @Html.TextAreaFor(x => x.Item2.Description, new { @placeholder = "Description", @class = "form-control" })
                                    </div>
                                    <input type="submit" class="btn btn-primary" value="Get Contact Details"/>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Item1.FullName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Item1.EmailId
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Mobile</h6>
                            </div>
                            @{
                                var mobileNo = Model.Item1.MobileNumber.Substring(0, 6);
                                <div class="col-sm-9 text-secondary">
                                    @(mobileNo+"XXXX")
                                </div>
                            }
                        </div>
                        @*<hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Address</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.Item1.Address, @Model.Item1.Area, @Model.Item1.City, @Model.Item1.State
                                </div>
                            </div>*@
                    </div>
                </div>
                <div class="row gutters-sm">
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2"></i>More Details</h6>
                                <small>Highest qualification</small>
                                <div class="form-group input-group">
                                    <span>@Model.Item1.HighestEducation</span>
                                </div>
                                <small>Medium</small>
                                <div class="form-group input-group">
                                    <span>@Model.Item1.Medium</span>
                                </div>
                                <small>Class From</small>
                                <div class="form-group input-group">
                                    <span>@Model.Item1.ClassFrom</span>
                                </div>
                                <small>Class To</small>
                                <div class="form-group input-group">
                                    <span>@Model.Item1.ClassTo</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2"></i>More Detials</h6>
                                <small>Experince</small>
                                <div class="form-group input-group">
                                    <span>@Model.Item1.Experience</span>
                                </div>
                                <small>Subjects</small>
                                <div class="form-group input-group">
                                    <span>@Model.Item1.Subjects</span>
                                </div>
                                <small>Description</small>
                                <div class="form-group input-group">
                                    <span>@Model.Item1.Description</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        margin-top: 20px;
        color: #1a202c;
        text-align: left;
        background-color: #e2e8f0;
    }

    .main-body {
        padding: 15px;
    }

    .card {
        box-shadow: 0 1px 3px 0 rgba(0,0,0,.1), 0 1px 2px 0 rgba(0,0,0,.06);
    }

    .card {
        position: relative;
        display: flex;
        flex-direction: column;
        min-width: 0;
        word-wrap: break-word;
        background-color: #fff;
        background-clip: border-box;
        border: 0 solid rgba(0,0,0,.125);
        border-radius: .25rem;
    }

    .card-body {
        flex: 1 1 auto;
        min-height: 1px;
        padding: 1rem;
    }

    .gutters-sm {
        margin-right: -8px;
        margin-left: -8px;
    }

        .gutters-sm > .col, .gutters-sm > [class*=col-] {
            padding-right: 8px;
            padding-left: 8px;
        }

    .mb-3, .my-3 {
        margin-bottom: 1rem !important;
    }

    .bg-gray-300 {
        background-color: #e2e8f0;
    }

    .h-100 {
        height: 100% !important;
    }

    .shadow-none {
        box-shadow: none !important;
    }
</style>